@model EventFinder.Models.AccountModels.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="reg-wrapper wrapper">
    <section class="create-form">
        <h2>Регистрация</h2>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-main">
                <p>
                    <input type="text" asp-for="Login" placeholder = "Введите логин" required>
                    <span asp-validation-for="Login" class="error-valid"></span>
                </p>
                <p>
                    <input type="email" asp-for="Email" placeholder = "Введите Email" required>
                    <span asp-validation-for="Email" class="error-valid"></span>
                </p>
                <p>
                    <input type="password" asp-for="Password" placeholder = "Введите пароль" required>
                    <span asp-validation-for="Password" class="error-valid"></span>
                </p>
                <p>
                    <input type="password" asp-for="ConfirmPassword" placeholder = "Подтвердите пароль" required>
                    <span asp-validation-for="ConfirmPassword" class="error-valid"></span>
                </p>
            </div>
            <button type="submit">Зарегистрироваться</button>
        </form>
    </section>
</div>
