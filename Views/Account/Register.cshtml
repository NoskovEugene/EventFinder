@model EventFinder.Models.AccountModels.RegisterModel

@using(Html.BeginForm("Register","Account",FormMethod.Post))
{
    <div class="form-group input-group">
        @Html.TextBoxFor(x=>x.Email,"",new {@class="form-control", @placeholder="Введите Email"})
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x=>x.Login,"",new { @class="form-control", @placeholder="Введите логин"})
    </div>
    <div class="form-group">
        @Html.PasswordFor(x=>x.Password,new {@class="form-control", @placeholder="Введите пароль"})
    </div>
    <div class="form-group">
        @Html.PasswordFor(x=>x.ConfirmPassword,new {@class="form-control", @placeholder="Подтвердите пароль"})
    </div>
    <div class="form-group">
        <button type="submit" class="btn">Регистрация</button>
    </div>
    
}


