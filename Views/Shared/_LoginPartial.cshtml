@using EventFinder.Models;
@using Microsoft.AspNetCore.Identity

@if(User.Identity.IsAuthenticated)
{
    <li class="nav-item"><a class="nav-link text-dark">Hello @User.Identity.Name</a></li>
    <li class="nav-item"><a class="nav-link text-dark" href="/Account/Logout">Logout</a></li>
}
else
{
    <li class="nav-item"><a class="nav-link text-dark" href="/Account/Register">Register</a></li>
    <li class="nav-item"><a class="nav-link text-dark" href="/Account/Login">Login</a></li>
}
