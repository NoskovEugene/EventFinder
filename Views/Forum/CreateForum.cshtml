@using EventFinder.Models.ForumModels
@model CreateForum

@{
    ViewData["Title"] = "Создать беседу";
}

    <div class="wrapper">
        <form asp-controller="Forum" asp-action="CreateForum" method="post">
            <input type="text" name="Theme" placeholder="Тема форума">
            <select asp-for="CategoryId">
                <option value="">Выбрать категорию</option>
                @foreach (var item in Model.Category)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <select asp-for="EventId">
                <option value="">Выбрать событие</option>
                @foreach (var item in Model.Event)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <button class="btn" type="submit">Сохранить</button>
        </form>
    </div>