@{
    ViewData["Title"] = "Home Page";
}

<div class="start-img">
    <div class="start-img-txt">
        <p>Присоединяйся<br> к сообществу активных людей!</p>
        <a class="arrow" href="#slider"><img src="img/arrow-white-down.png"></a>
    </div>
</div>
<div class="wrap-homepage">
    <div class="calendar-slider" id="slider">
        <div class="base-form">
            <div class="slider">
                <div class="item">
                    <img src="~/img/slide1.jpg" alt="Первый слайд">
                </div>

                <div class="item">
                    <img src="~/img/slide2.jpg" alt="Второй слайд">
                </div>

                <div class="item">
                    <img src="~/img/slide3.jpg" alt="Третий слайд">
                </div>

                <a class="prev" onclick="minusSlide()">&#10094;</a>
                <a class="next" onclick="plusSlide()">&#10095;</a>

                <div class="slider-dots">
                    <span class="slider-dots_item" onclick="currentSlide(1)"></span>
                    <span class="slider-dots_item" onclick="currentSlide(2)"></span>
                    <span class="slider-dots_item" onclick="currentSlide(3)"></span>
                </div>
            </div>
        </div>
        <div class="base-form">
            <div class="head-cal">
                <h5 class="name-calendar">Календарь событий<span class="fa fa-calendar cal-icon"></span></h5>
            </div>
            <div class="body-cal">
                <div class="cal-field"></div>
                <div class="event-cal"></div>

            </div>
        </div>
    </div>
    <h4 class="name-event">КАТЕГОРИИ МЕРОПРИЯТИЙ</h4>
    <div class="event-category">
        <div class="event-block">
            <img src="img/1.jpg" alt="Танцы">
            <div class="desc-event"><span>Танцы</span></div>
        </div>
        <div class="event-block">
            <img src="img/2.jpg" alt="Совместные увлечения">
            <div class="desc-event"><span>Совместные увлечения</span></div>
        </div>
        <div class="event-block">
            <img src="img/3.jpg" alt="Для старого поколения">
            <div class="desc-event"><span>Для старого поколения</span></div>
        </div>
        <div class="event-block">
            <img src="img/10.jpg" alt="Митинги">
            <div class="desc-event"><span>Митинги</span></div>
        </div>
        <div class="event-block">
            <img src="img/4.png" alt="Путешествия">
            <div class="desc-event"><span>Путешествия</span></div>
        </div>
        <div class="event-block">
            <img src="img/5.jpg" alt="Музыка">
            <div class="desc-event"><span>Музыка</span></div>
        </div>
        <div class="event-block">
            <img src="img/6.jpg" alt="Фестивали">
            <div class="desc-event"><span>Фестивали</span></div>
        </div>
        <div class="event-block">
            <img src="img/7.png" alt="Спорт">
            <div class="desc-event"><span>Спорт</span></div>
        </div>
        <div class="event-block">
            <img src="img/8.jpg" alt="Кино">
            <div class="desc-event"><span>Кино</span></div>
        </div>
        <div class="event-block">
            <img src="img/9.jpeg" alt="Настольные игры">
            <div class="desc-event"><span>Настольные игры</span></div>
        </div>
        <div class="event-block">
            <img src="img/11.jpg" alt="Свидания">
            <div class="desc-event"><span>Свидания</span></div>
        </div>
        <div class="event-block">
            <img src="img/12.jpg" alt="Киберспорт">
            <div class="desc-event"><span>Киберспорт</span></div>
        </div>
    </div>
</div>
